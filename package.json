{
  "name": "sls-static-api",
  "version": "1.0.0",
  "description": "Pre-calculated (fast) API for Brokalys",
  "author": "Matiss Janis Aboltins <matiss@brokalys.com>",
  "license": "MIT",
  "scripts": {
    "build": "sls package",
    "lint": "eslint src",
    "test": "jest --coverage",
    "deploy": "sls deploy --stage staging",
    "deploy:ci": "sls deploy --conceal --stage prod",
    "prepare": "husky install"
  },
  "dependencies": {
    "@brokalys/location-json-schemas": "^1.3.0",
    "axios": "^0.24.0",
    "joi": "^17.1.1",
    "lodash.chunk": "^4.2.0",
    "lodash.flatten": "^4.4.0",
    "lodash.groupby": "^4.6.0",
    "moment": "^2.26.0",
    "moment-range": "^4.0.2",
    "numbers": "^0.7.0",
    "serverless-dynamodb-client": "^0.0.2"
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.10.1",
    "aws-sdk": "^2.686.0",
    "eslint": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "lint-staged": "^12.1.3",
    "prettier": "^2.0.5",
    "serverless": "^2.25.2",
    "serverless-domain-manager": "^5.1.0",
    "serverless-layers": "^2.3.3",
    "serverless-webpack": "^5.3.2",
    "webpack": "^5.23.0",
    "webpack-node-externals": "^3.0.0"
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-emoji"
    }
  }
}
